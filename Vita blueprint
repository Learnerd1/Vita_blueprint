                    properties: [
                        { name: 'Name', type: 'Title', purpose: 'The task description.' },
                        { name: 'Status', type: 'Select/Status', purpose: 'To Do, In Progress, Done.' },
                        { name: 'Project', type: 'Relation', purpose: 'Links to the Projects database.' },
